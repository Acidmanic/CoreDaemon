<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Authors>Mani Moayedi</Authors>
        <Version>1.1.0</Version>
        <Company>Acidmanic</Company>
        <PackageIcon>graphics\damien.png</PackageIcon>
        <Description>Adds init.d daemon installation/uninstallation to your webapps</Description>
        <Summary>Call CoreDaemon.Damien.Summon().Execute(args) in yout program, and exit due the results.</Summary>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <!-- NuGet -->
        <None Include="graphics\damien.png" Pack="true" PackagePath="\graphics" />
        <None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\Readme.md">
        <Link>Readme.md</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Acidmanic.MSLogging.LightWeight" Version="1.0.1" />
    </ItemGroup>
    
</Project>
